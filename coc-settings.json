{
  "languageserver": {
    "nixd": {
      "command": "nixd",
      "rootPatterns": [
        ".nixd.json"
      ],
      "filetypes": [
        "nix"
      ],
    },
    "nix.formatting.provider": "nixfmt",
    "python.formatting.provider": "none",
    "python.venvPath": "venv",
    "yaml": {
      "enable": true,
      "format": {
        "enable": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "proseWrap": "preserve",
        "arrowParens": "always",
        "endOfLine": "lf",
        "semi": true,
        "trailingComma": "all",
      },
    },
  },
}
